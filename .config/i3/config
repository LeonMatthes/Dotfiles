# move workspace between outputs
bindsym $mod+ctrl+h move workspace to output left
bindsym $mod+ctrl+l move workspace to output right

# Window swapping
bindsym $mod+m mark --toggle target;\
    [tiling] border pixel $default_border_width;\
    [con_mark="target"] border pixel $emphasis_border_width
bindsym $mod+n swap container with mark target
bindsym $mod+b move container to mark target

# Scratchpad
# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad
# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# Screenshots
bindsym Print exec scrot '/home/leon/Pictures/Screenshots/%Y-%m-%d_$wx$h.png' -e 'notify-send --icon=$f "Screenshot $n saved" "$f"'
bindsym Ctrl+Print exec gnome-screenshot -i
bindsym --release $mod+Shift+s exec --no-startup-id gnome-screenshot -c -a

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
# bindsym XF86AudioPlay exec playerctl play
# bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next && pkill -RTMIN+20 i3block
bindsym XF86AudioPrev exec playerctl previous && pkill -RTMIN+20 i3block

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && pkill -RTMIN+10 i3blocks # mute sound

# Screen brightness controls
bindsym XF86MonBrightnessUp exec gdbus call --session --dest org.gnome.SettingsDaemon.Power --object-path /org/gnome/SettingsDaemon/Power --method org.gnome.SettingsDaemon.Power.Screen.StepUp # increase screen brightness
bindsym XF86MonBrightnessDown exec gdbus call --session --dest org.gnome.SettingsDaemon.Power --object-path /org/gnome/SettingsDaemon/Power --method org.gnome.SettingsDaemon.Power.Screen.StepDown # decrease screen brightness

bindsym $mod+Shift+s exec "gnome-screenshot -a -c"


