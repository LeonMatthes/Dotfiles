################################################
###### Custom Quitting dialog
################################################
set $mode_power log [o]ut | [s]uspend | [r]eboot  | [p]oweroff | [h]ibernate | [l]ock
mode "$mode_power" {
    bindsym o mode "default"; exec qdbus org.kde.ksmserver /KSMServer logout 1 3 3
    bindsym s mode "default"; exec systemctl suspend
    bindsym r mode "default"; exec reboot
    bindsym p mode "default"; exec systemctl poweroff
    bindsym h mode "default"; exec systemctl hibernate
    bindsym l mode "default"; exec ~/.config/i3/lock-screen.sh
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym --release XF86PowerOff mode "$mode_power"
bindsym $mod+Shift+e mode "$mode_power"

