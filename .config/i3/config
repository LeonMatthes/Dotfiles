workspace_auto_back_and_forth yes

################################################
###### Custom Quitting dialog
################################################
set $mode_power log [o]ut | [s]uspend | [r]eboot  | [p]oweroff | [l]ock
mode "$mode_power" {
        bindsym o mode "default"; exec i3-msg exit
        bindsym s mode "default"; exec ~/.config/i3/lock-screen.sh; exec systemctl suspend
        bindsym r mode "default"; exec reboot
        bindsym p mode "default"; exec systemctl poweroff
	bindsym l mode "default"; exec ~/.config/i3/lock-screen.sh
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym --release XF86PowerOff mode "$mode_power"
bindsym $mod+Shift+e mode "$mode_power"

################################################
###### custom startup scripts
################################################

# assign workspaces to monitors
exec_always workspace $ws1 output HDMI-0 eDP-1-1
exec_always workspace $ws2 output eDP-1-1

# Fix monitor setup
exec_always xrandr --output HDMI-0 --auto --left-of eDP-1-1
exec xrandr --output eDP-1-1 --mode 1920x1080

# Fix trackpad
# Enable tapping
exec_always xinput set-prop "ETPS/2 Elantech Touchpad" 328 1
# Set accelleration speed
exec_always xinput set-prop "ETPS/2 Elantech Touchpad" 315 0.3
# Enable natural scrolling
exec_always xinput set-prop "ETPS/2 Elantech Touchpad" 306 1
# Middle Click Emulation
exec_always xinput set-prop "ETPS/2 Elantech Touchpad" 313 1

# Fix keyboard
# Enable compose key
exec_always setxkbmap -layout us -option compose:ralt

######### start default apps
### status applications
# bluetooth and network
exec blueman-applet
exec nm-applet
# sound applet
# no longer necessary, i3blocks can handle that
# exec pasystray
# window compositor
exec compton -f -I 0.05 -O 0.05


### Start apps
exec --no-startup-id spotify
exec --no-startup-id thunderbird
exec --no-startup-id telegram-desktop

for_window [class="Spotify"] move to workspace "10:Spotify"

for_window [class="Thunderbird"] move to workspace "9:Mail"
for_window [class="Telegram"] move to workspace "9:Mail"

################################################
######	Custom keybindings
################################################

# move workspace between outputs
bindsym $mod+ctrl+j move workspace to output left
bindsym $mod+ctrl+semicolon move workspace to output right

# Window swapping
bindsym $mod+m mark --toggle target
bindsym $mod+n swap container with mark target
bindsym $mod+b move container to mark target

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
# bindsym XF86AudioPlay exec playerctl play
# bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next && pkill -RTMIN+20 i3block
bindsym XF86AudioPrev exec playerctl previous && pkill -RTMIN+20 i3block

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && pkill -RTMIN+10 i3blocks # mute sound

# Screen brightness controls
bindsym XF86MonBrightnessUp exec backlight_control +10 # increase screen brightness
bindsym XF86MonBrightnessDown exec backlight_control -10 # decrease screen brightness


